<!DOCTYPE html>
<html lang="pt-br">
 
<head>
  <meta charset="UTF-8">
  <title>
    <%= aula.titulo %>
  </title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/menu.css">
</head>
 
<body class="container">
  <!-- Header -->
  <header class="main-header">
    <div class="logo-container">
      <img src="/images/Fictional_company_logo.jpg" alt="EduStream Logo" class="logo-image">
      <span class="logo-text">EduStream</span>
    </div>
 
    <div class="search-container">
      <input type="text" placeholder="Procurar cursos" class="search-input">
      <button class="search-button">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none"
          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"></circle>
          <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
        </svg>
      </button>
    </div>
 
    <div class="user-profile">
      <button class="profile-button">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
      </button>
    </div>
  </header>
 
  <!-- Navegação -->
  <nav class="main-nav">
    <ul class="nav-list">
      <li class="nav-item"><a href="/menu">Home</a></li>
      <li class="nav-item"><a href="/aulas_salvas/">Aulas Salvas</a></li>
      <li class="nav-item"><a href="/meus_cursos">Meus Cursos</a></li>
    </ul>
  </nav>
 
  <!-- Conteúdo principal -->
  <main class="flex flex-col lg:flex-row gap-6 p-8 max-w-7xl mx-auto">
 
    <!-- Bloco do vídeo -->
    <div class="w-full">
      <video class="w-full rounded-lg shadow" controls>
        <source src="<%= aula.videoUrl %>" type="video/mp4">
        Seu navegador não suporta vídeo.
      </video>
 
      <!-- Navegação entre aulas -->
      <div class="flex justify-between items-center my-6">
        <button class="text-sm text-gray-600 hover:underline">← Aula anterior</button>
        <button class="bg-gray-300 text-sm px-4 py-2 rounded">Marcar como concluída</button>
        <button class="text-sm text-gray-600 hover:underline">Próxima aula →</button>
      </div>
 
      <!-- Avaliação e comentário -->
      <div class="mb-6">
        <div class="flex space-x-1 text-yellow-400 text-xl mb-2">
          <% for (let i=0; i < 5; i++) { %>
            <span>☆</span>
            <% } %>
        </div>
        <textarea placeholder="Deixe seu comentário sobre a aula"
          class="w-full p-3 border rounded resize-none focus:outline-none focus:ring-2 focus:ring-purple-500"></textarea>
        <button class="mt-2 bg-purple-600 text-white px-4 py-2 rounded text-sm hover:bg-purple-700 transition">
          Enviar comentário
        </button>
      </div>
    </div>
 
    <!-- Sidebar com lista de aulas -->
    <aside class="w-full lg:w-1/3 bg-white p-6 rounded-xl shadow">
      <h2 class="text-lg font-bold mb-1">
        <%= aula.titulo %>
      </h2>
      <p class="text-sm text-gray-500 mb-4">Descrição: <%= aula.descricao %>
      </p>
 
      <div>
        <h3 class="text-sm font-semibold text-gray-700 mb-2">Aulas do curso</h3>
        <ul class="text-sm text-gray-800 space-y-2">
          <% aulas.forEach((conteudos)=> { %>
            <div class="border-l-4 border-purple-600 pl-4 py-2">
              <h3 class="text-lg font-semibold text-gray-900">
                <%= conteudos.titulo %>
              </h3>
            </div>
            <% }); %>
        </ul>
      </div>
    </aside>
  </main>
</body>
 
</html>